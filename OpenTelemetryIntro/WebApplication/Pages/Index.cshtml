@page
@model IndexModel
@{
	ViewData["Title"] = "Home page";
}

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
	<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="text-center">
	<form asp-page="/Index" class="needs-validation" novalidate>
		<div class="form-group">
			<label for="SearchQuery">Search Query</label>
			<input type="text" class="form-control" name="SearchQuery" value="@Model.SearchQuery" placeholder="Search query" required>
		</div>
		<button data-spinner="submitSpinner" type="submit" class="btn btn-primary btn-block">Search</button>
	</form>
</div>

<div class="mt-3">
	<textarea class="w-100">
		@Html.Raw(Model.SearchResponse)
	</textarea>
</div>